<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/time_switch_information_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/time_switch_settings_information_str"
        android:textStyle="bold"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="20%" />

    <Button
        android:id="@+id/time_switch_add_btn"
        style="@style/ButtonStyle"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/time_switch_settings_add_str"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="10%" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_below="@id/time_switch_information_tv"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="85%"
        app:layout_widthPercent="90%">

    </android.support.v7.widget.RecyclerView>
</android.support.percent.PercentRelativeLayout>